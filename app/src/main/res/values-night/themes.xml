<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HCProDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorIndigo</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorIndigo</item>
        <item name="colorOnPrimary">@color/primaryLightColorIndigo</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorIndigo</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorIndigo</item>
        <item name="colorOnSecondary">@color/secondaryLightColorIndigo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HCProDemo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HCProDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.HCProDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
</resources>